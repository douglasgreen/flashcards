{
    "name": "douglasgreen/flashcards",
    "description": "A flashcard manager",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Flashcards\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "shipmonk/name-collision-detector": "^2.1",
        "symplify/easy-coding-standard": "^12.5"
    },
    "scripts": {
        "lint": [
            "detect-collisions",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "rector"
        ]
    }
}
